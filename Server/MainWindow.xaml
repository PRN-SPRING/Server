<Window x:Class="Server.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Server"
        mc:Ignorable="d"
        Title="Chat Server" Height="450" Width="800">
    <Grid>
        <ListBox Name="MessageList" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="10,10,10,50" />
        <TextBox Name="MessageInput" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Margin="10,10,10,70" Height="30"/>
        <Button Content="Start Server" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10,10,10,10" Width="100" Click="StartServerButton_Click"/>
    </Grid>
</Window>
