<Window x:Class="Server.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Server"
        mc:Ignorable="d"
        Title="Chat Server" Height="450" Width="800">
    <Grid>
        <ListBox Name="MessageList" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="10,10,10,100" />
        <TextBox Name="PortInput" VerticalAlignment="Top" Margin="142,349,413,0" Height="30" TextChanged="PortInput_TextChanged" />
        <TextBox Name="MessageInput" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Margin="10,40,120,10" Height="30" />
        <Button Content="Send Message" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="130,10,10,10" Width="100" Click="SendMessageButton_Click" />
        <Button Content="Start Server" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,300,55" Width="100" Click="StartServerButton_Click" />
        <TextBlock HorizontalAlignment="Left" Margin="35,353,0,0" TextWrapping="Wrap" Text="Enter Port" VerticalAlignment="Top" Width="78"/>
    </Grid>
</Window>
